<%= render 'shared/stepper' %>
 <div class="background_calendar"> 
  <div class="d-flex align-self-start justify-content-center fix-footer ">

   <div class="form" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.5)">
    <%# form-wrapper text-justify text-center rgb(120, 121, 120) bg-light rounded p-3 m-3 transi Larger shadow %>
      <h2 class="title">Sélectionnez vos disponibilités</h2>

      <%= simple_form_for [@product, @booking] do |f| %>
        <%= f.input :starts_at,
                    label: false,
                    placeholder: 'Débute le',
                    as: :string,
                    required: false,
                    input_html: { id: "range_start", class: "input-value" } %>
        <%= f.input :ends_at,
                    label: false,
                    placeholder: 'Finit le',
                    as: :string,
                    required: false,
                    input_html: { id: "range_end", class: "input-value" } %>
        <%= f.input :surface_area, as: :hidden %>
        <%= f.input :product_id, as: :hidden %>
        <%= f.input :floor_type, as: :hidden %>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Valider', class: "example_f justify-content"%>
        </div>
      <% end %>
    </div>

  </div>
</div>
