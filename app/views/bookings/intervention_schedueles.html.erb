
<div class="background_calendar" style="
    background-image: url(https://images.pexels.com/photos/347139/pexels-photo-347139.jpeg?auto=compress&amp;cs=tinysrgb&amp;dpr=2&amp;w=500);
    background-repeat: no-repeat;
    background-size: 100% 100%;">
   <div class="d-flex align-self-start justify-content-center fix-footer ">

  <div class="form-wrapper text-justify text-center  text-black p-3 m-3 transi">
    <h2>Selectionner vos dates</h2>

    <%= simple_form_for :search, method: "get" do |f| %>

      <%= f.input :starts_at, input_html: { id: "range_start" }%>
      <%= f.input :ends_at, input_html: { id: "range_end" }%>
      <%= f.button :submit, "Valider", class: "button-invers " %>
    <% end %>
  </div>
  </div>
</div>
