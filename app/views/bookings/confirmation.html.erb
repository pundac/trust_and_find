<%= render 'shared/stepper' %>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <%# Devis estimatif %>
      <div class="card-invoice border-light shadow p-3 mt-3 transi">
        <h2 class="text-justify text-center">Devis Estimatif</h2>
        <div class="d-flex flex-grow-1 flex-row m-3">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Coût d'achat:</li>
            <li class="list-group-item">Coût de la main d'oeuvre: </li>
            <li class="list-group-item">Coût de livraison:</li>
          </ul>
          <ul class="list-group list-group-flush">

            <li class="list-group-item"><%= (@booking.product.price_per_square_meter * @booking.surface_area).round(2) %>€</li>
            <li class="list-group-item"><%=(@booking.depose + @booking.labor).round(2)%>€</li>
            <li class="list-group-item">50€</li>
          </ul>
        </div>

      </div>
    </div>
    <div class="col-12 col-md-3">
      <%# Card CTA %>
      <div class="card-total-cost shadow transi">
        <h2>Coût total</h2>
        <p><strong><%= @booking.total.round(2)%></strong> € </p>
        <%= link_to "Prise de rendez-vous", intervention_schedueles_bookings_path(surface_area: params[:surface_area],product: params[:product], new_product: params[:new_product]), class: "example_f"  %>
      </div>
    </div>
    <div class="col-12 col-md-9">
      <%# Card product %>
      <div class="card-product card-product-offset w-100 mt-3 transi">
        <img src="<%=@booking.image_product%>"  alt="your floor" >
        <div class='w-100'>
          <p class="text-center">Type de produit: <strong><%=@booking.product.product_type%></strong></p>
          <p class="text-center">Descriptif: <strong><%=@booking.product.description%></strong></p>
          <p class="text-center">Prix du produit au mètre carré: <strong> <%=@booking.product.price_per_square_meter%>€</strong></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="card-icon mt-3">
        <%= image_tag 'work-icon.png'%>
      </div>
    </div>

  </div>
</div>
</div>
